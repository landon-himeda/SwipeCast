<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".game_window">


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageButton4"
            app:layout_constraintStart_toEndOf="@+id/imageButton3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageButton5"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/imageButton6"
            app:layout_constraintStart_toStartOf="@+id/imageButton3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/imageButton4" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton4"/>
    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/oponentView" app:layout_constraintStart_toEndOf="@+id/defenseCanvas"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/attackView" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <View
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:id="@+id/defenseCanvas"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <View
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:id="@+id/attackView"
            tools:layout_editor_absoluteY="18dp" tools:layout_editor_absoluteX="579dp"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="@+id/imageButton2"
            android:layout_marginEnd="9dp" android:layout_marginRight="9dp"
            app:layout_constraintStart_toStartOf="@+id/imageButton5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton5"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageButton2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageButton3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/instructions"
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/imageButton5"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton4" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>